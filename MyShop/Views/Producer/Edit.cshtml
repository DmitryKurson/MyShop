@model MyShop.Models.Producer
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2> Редагування даних виробника </h2>

<form asp-action="EditPost" asp-controller="producer">

    <p>
        <label asp-for="id">Id</label><br />
        <input type="text" asp-for="id" />
    </p>
    <p>
        <label asp-for="title">Назва</label><br />
        <input type="text" asp-for="title" />
    </p>
    <p>
        <label asp-for="country">Країна</label><br />
        <input type="text" asp-for="country" />
    </p>
    <p>
        <label asp-for="phone_number">Номер телефону</label><br />
        <input type="text" asp-for="phone_number" />
    </p>
    <p>
        <input type="submit" value="Зберегти" />
    </p>

</form>

<form asp-action="index" asp-controller="producer">
    <input type="submit" value="Назад" />
</form>