@model MyShop.Models.Client

<h2> Зареєструватися </h2>

<form asp-action="create" asp-controller="client">
     <p>
        <label asp-for="name">Ім'я</label><br />
        <input type="text" asp-for="name" />
    </p>
    <p>
        <label asp-for="lastname">Прізвище</label><br />
        <input type="text" asp-for="lastname" />
    </p>
    <p>
        <label asp-for="email">Email</label><br />
        <input type="text" asp-for="email" />
    </p>
    <p>
        <label asp-for="adress">Адреса</label><br />
        <input type="text" asp-for="adress" />
    </p>
    <p>
        <label asp-for="phone_number">Номер телефону</label><br />
        <input type="text" asp-for="phone_number" />
    </p>
    <p>
        <input type="submit" value="Зберегти" />
    </p>
</form>

<form asp-action="index" asp-controller="clients">
    <input type="submit" value="Назад" />
</form>